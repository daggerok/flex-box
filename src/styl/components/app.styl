@media (min-with: 500px)
  .container-1
    display flex
    // align-items flex-start
    // align-items flex-end
    // align-items center
    align-items flex-strech // default

    // // change direction from row to column:
    // flex-direction column
    flex-direction row // default

  .container-2
    display flex
    // justify-content center
    // justify-content flex-end
    // justify-content space-around
    // justify-content space-between
    // justify-content flex-start // default
    justify-content space-between

.container-1 div, .container-2 div
  border 1px solid #ddd
  padding 1%

.box-1
  flex 8
  order 2 // show as 2nd column

.box-2
  flex 2
  order 1 // show as 1st column

.box-3
  flex 2
  order 3 // show as 3rd column

.container-2-box
  // width 30% // use flex-bases for more flexibility
  flex-basis 27%

body
  font-size 1em !important
  font-family Roboto !important
